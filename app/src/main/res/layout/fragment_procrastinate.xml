<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/procrastinateBg"
        tools:context=".fragments.ProcrastinateFragment">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:fontFamily="@font/rubik"
            android:text="Do you Procrastinate?"
            android:textAlignment="center"
            android:textColor="#FFECCC "
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            android:layout_marginTop="300dp">

            <RelativeLayout
                android:background="@drawable/cardbg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yellowhalf"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true" />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="9dp"
                    android:src="@drawable/cloud__2_"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="90dp"
                    android:layout_alignParentEnd="true" />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="9dp"
                    android:src="@drawable/cloud__2_"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="70dp"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/cardTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Yes and Iâ€™m ready to change that"
                    android:textColor="#FFFF"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:textStyle="bold" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView1"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:background="@drawable/cardbg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="12dp"
                    android:src="@drawable/yellow"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentEnd="true" />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="9dp"
                    android:src="@drawable/cloud__2_"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="90dp"
                    android:layout_alignParentEnd="true" />
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="17dp"
                    android:src="@drawable/yellow"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="70dp"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/cardTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="No, I easily finish the tasks at hand"
                    android:textColor="#FFFF"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:textStyle="bold" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:background="@drawable/cardbg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="9dp"
                    android:src="@drawable/cloud__2_"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentEnd="true" />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="9dp"
                    android:src="@drawable/cloud__2_"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="90dp"
                    android:layout_alignParentEnd="true" />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="9dp"
                    android:src="@drawable/cloud__2_"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="70dp"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/cardTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Not ready to answer"
                    android:textColor="#FFFF"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:textStyle="bold" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>